<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/rectangle_4">

                    <Button
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/menu_icon"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/layer_4"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jeniffer Wilson "
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="25sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UI/UX Designer"
                                android:textAllCaps="false"
                                android:textColor="#4bc2ff"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="4">
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:background="#fff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:background="#4dc2ff">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="33sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="remaining tasks"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:background="#ff7fe5">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="32"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="33dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="completed tasks"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:background="#fff">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_1"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:background="#fff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="today"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:textColor="#8393a3"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/btnMyTeams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Teams"
            android:drawableRight="@drawable/down_arrow2"
            android:textColor="#3c464f"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ellipse_03"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnAllPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News"
            android:drawableRight="@drawable/down_arrow2"
            android:textColor="#3c464f"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ellipse_04"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnOpenTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Team"
            android:drawableRight="@drawable/down_arrow2"
            android:textColor="#3c464f"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ellipse_05"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnAllUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Players"
            android:drawableRight="@drawable/down_arrow2"
            android:textColor="#3c464f"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ellipse_06"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>

