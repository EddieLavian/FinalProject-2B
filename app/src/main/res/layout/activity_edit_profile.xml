<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:id="@+id/menu"
android:layout_width="match_parent"
android:layout_height="match_parent">
<RelativeLayout
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@drawable/banner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@drawable/ball"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:text="Open Team"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="22sp"/>
    </LinearLayout>
</RelativeLayout>

<LinearLayout
    android:layout_weight="4"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#f7f6f6">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:drawableLeft="@drawable/ellipse_03"
        android:textAllCaps="false"
        android:drawablePadding="16dp"
        android:textSize="18sp"
        android:gravity="start"
        android:clickable="true"
        android:padding="10dp"
        android:textColor="#a6aff1"
        android:id="@+id/etUserName"/>


    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:drawableLeft="@drawable/ellipse_06"
        android:textAllCaps="false"
        android:drawablePadding="16dp"
        android:textSize="18sp"
        android:gravity="start"
        android:clickable="true"
        android:padding="10dp"
        android:textColor="#a6aff1"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:entries="@array/city"
            android:gravity="center"
            android:hint="From"
            android:inputType="number"
            android:padding="10dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="30sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ellipse_05"
            android:textAllCaps="false"
            android:textColor="#a6aff1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:hint="save"
            android:drawableLeft="@drawable/ellipse_7"
            android:textAllCaps="false"
            android:drawablePadding="16dp"
            android:textSize="18sp"
            android:gravity="start"
            android:clickable="true"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#a6aff1"/>
        <Button

            android:id="@+id/btnChoose"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:hint="Choose Photo"
            android:drawableLeft="@drawable/ellipse_8"
            android:textAllCaps="false"
            android:drawablePadding="16dp"
            android:textSize="18sp"
            android:gravity="start"
            android:clickable="true"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#a6aff1"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
</LinearLayout>