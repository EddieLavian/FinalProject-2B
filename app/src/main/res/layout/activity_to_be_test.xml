

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/stats"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/rectangle_4">

                    <Button
                        android:id="@+id/btnMenu"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/menu_icon"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="90dp"
                            android:background="@drawable/logo"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="To Be "
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="25sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Part Of The Game"
                                android:textAllCaps="false"
                                android:textColor="#4bc2ff"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="4">
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:background="#fff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:background="#4dc2ff">
                            <TextView
                                android:id="@+id/btnOpenTeam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Open Team"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="17sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:background="#eb5ec6f4">

                            <TextView
                                android:id="@+id/btnMyTeams"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Teams"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="17sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:background="#fff">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ball" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:background="#fff">


        <TextView
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ellipse_03"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/down_arrow2"
            android:padding="10dp"
            android:text="Chat"
            android:textColor="#3c464f"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnAllPost"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ellipse_04"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/down_arrow2"
            android:padding="10dp"
            android:text="News"
            android:textColor="#3c464f"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnWeather"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ellipse_05"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/down_arrow2"
            android:padding="10dp"
            android:text="Weather"
            android:textColor="#3c464f"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnAllUsers"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ellipse_06"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/down_arrow2"
            android:padding="10dp"
            android:text="All Players"
            android:textColor="#3c464f"
            android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>





