<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lvUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#d6e7f9"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#d6e7f9"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="hello"
            android:padding="0dp"
            android:textColor="#666262"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#d6e7f9"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="hello"
            android:padding="0dp"
            android:textColor="#666262"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvPlace"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#d6e7f9"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="hello"
            android:padding="0dp"
            android:textColor="#666262"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMinimumPlayers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#d6e7f9"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="hello"
            android:padding="0dp"
            android:textColor="#666262"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAttended"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#d6e7f9"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="hello"
            android:padding="0dp"
            android:textColor="#666262"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPlayers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#d6e7f9"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="hello"
            android:padding="0dp"
            android:textColor="#666262"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView

            android:id="@+id/tvAttending"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#d6e7f9"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="Not Arrive To Next Game"
            android:padding="0dp"
            android:textColor="#666262"
            android:textSize="16sp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgTeamProfile"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ball"
            app:border_color="#7a868f"
            app:border_width="1dp" />
    </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>